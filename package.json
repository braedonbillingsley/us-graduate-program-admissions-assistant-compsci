        "mongoose": "^7.0.3",
        "node-cache": "^5.1.2"
    },
    "devDependencies": {
        "chai": "^4.3.7",
        "mocha": "^10.2.0",
        "nodemon": "^2.0.22",
        "supertest": "^7.0.0"
    }
}
