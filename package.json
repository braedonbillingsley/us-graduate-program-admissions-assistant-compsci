{
    "name": "grad-school-assistant",
    "version": "1.0.0",
    "main": "server.js",
    "type": "module",
    "scripts": {
        "start": "node server.js",
        "dev": "nodemon server.js",
        "test": "NODE_ENV=test mocha --experimental-modules --es-module-specifier-resolution=node tests/**/*.test.js --exit --timeout 10000",
        "test:verbose": "NODE_ENV=test mocha --experimental-modules --es-module-specifier-resolution=node tests/**/*.test.js --exit --timeout 10000",
